<% content_for :sidebar do %>
  <ul class="nav nav-list">
    <li class="nav-header">      
      <b>Applications</b>
    </li>
  </ul>
  <ul class="nav nav-list" data-view="collections">
    <% @applications.each do |app| %>
      <li>
        <a href="<%= app_url(app) %>"><i class="icon-folder-close"></i> <%= app %></a>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="page-header">
  <h1>Connect<small>PostgreSQL, MongoDB, MySQL, SQLite</small></h1>
</div>
<div class="row-fluid">
  <div class="span3"></div>
  <div class="span6">
    <%= form_tag sessions_path, method: "post", class: "form-horizontal", "data-name" => "new-session-form" do %>
      <div class="control-group">
        <label class="control-label" for="adapter">Adapter</label>
        <div class="controls">
          <select name="session[adapter]" id="adapter" data-name="adapter-select">
            <option value="postgresql">PostgreSQL</option>
            <option value="mongodb">MongoDB</option>
            <option value="mysql">MySQL</option>
            <option value="sqlite">SQLite</option>
          </select>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="name">Connection Name</label>
        <div class="controls">
          <input type="text" id="name" placeholder="URL friendly Connection Name" name="session[name]" />
        </div>
      </div>
      <div class="control-group" data-adapter-dependent data-postgresql data-mongodb data-mysql>
        <label class="control-label" for="host">Host</label>
        <div class="controls">
          <input type="text" id="host" placeholder="host" name="session[host]" value="127.0.0.1" />
        </div>
      </div>
      <div class="control-group" data-adapter-dependent data-postgresql data-mongodb data-mysql>
        <label class="control-label" for="inputUserName">username</label>
        <div class="controls">
          <input type="text" id="inputUserName" placeholder="username" name="session[username]" />
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="inputPassword">Database</label>
        <div class="controls">
          <input type="text" id="inputPassword" placeholder="database" name="session[database]" />
        </div>
      </div>
      <div class="control-group" data-adapter-dependent data-postgresql data-mongodb data-mysql>
        <label class="control-label" for="inputPassword">Password</label>
        <div class="controls">
          <input type="password" id="inputPassword" placeholder="Password" name="session[password]">
        </div>
      </div>
      <div class="control-group" data-adapter-dependent data-mysql>
        <label class="control-label" for="inputPassword">Socket</label>
        <div class="controls">
          <input type="text" id="inputSocket" placeholder="Socket" name="session[socket]" />
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <button type="submit" class="btn">Connect</button>
        </div>
      </div>
    <% end %>
  </div>
</div>